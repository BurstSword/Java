import Gestora.GestoraMenus;


import java.sql.*;
import java.util.Scanner;




public class EjercicioRepaso2 {
    public static void main(String[] args) {
        int button;
        String prueba = "";


        Scanner keyboard = new Scanner(System.in);

        try{
			Class.forName("com.mysql.jdbc.Driver");
			System.out.println("Driver cargado");
		}catch (Exception e){
			e.printStackTrace();
		}	 
        try {

            Connection conexion = DriverManager.getConnection("jdbc:mysql://localhost:3306/videojuegos", "root", "");
            System.out.println("conectando");
            Statement stmt = conexion.createStatement();
            ResultSet Rst = stmt.executeQuery("select *  from usuario");
            while (Rst.next()) {
            	System.out.println(Rst.getString("nombre"));
            }

        } catch (SQLException ex) {
            System.out.println(ex.getMessage());
        }

        do {
            do {
                GestoraMenus.loginMenu();
                button = keyboard.nextInt();
            } while (button < 1 || button > 5);

            switch (button) {
                case 1:

                    //Registro
                    break;
                case 2:

                    //Loggearse
                    break;
                case 3:

                    //Loggearse como admin
                    break;

                case 4:

                    //Unregister
                    break;
                case 5:
                    //Close
                    break;
            }

        } while (button != 5);

        //UNA VEZ LOGGEADA COMPRUEBA SI ERES ADMIN O NO Y MUESTRA UN MENU U OTRO

        do {
            do {
                GestoraMenus.userMenu(prueba);
                button = keyboard.nextInt();
            } while (button < 1 || button > 4);

            switch (button) {
                case 1:

                    //Show every registry
                    break;
                case 2:

                    //Show an specific registry
                    break;
                case 3:

                    //Show a random registry
                    break;

                case 4:

                    //Logout
                    break;
            }
        } while (button != 4);

        do {
            do {
                GestoraMenus.adminMenu(prueba);
                button = keyboard.nextInt();
            } while (button < 1 || button > 7);
            switch (button) {
                case 1:

                    //Show every registry
                    break;
                case 2:

                    //Show an specific registry
                    break;
                case 3:

                    //Show a random registry
                    break;

                case 4:

                    //Add a new registry
                    break;

                case 5:
                    //Remove a registry
                    break;
                case 6:
                    //Make someone an admin
                    break;
                case 7:

                    break;
            }

        } while (button != 7);

        //EN CONSTRUCCIÃ“N
    }
}

